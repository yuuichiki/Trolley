    <Style x:Key="HomeIconButtonStyle" TargetType="{x:Type controls:IconButton}">
        <Setter Property="Width" Value="300" />
        <Setter Property="Height" Value="200" />
        <Setter Property="Margin" Value="0,0,0,5" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:IconButton}">
                    <Border
                        Name="myborder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10"
                        Opacity="{TemplateBinding Opacity}">
                        <StackPanel Width="280" Orientation="Horizontal">
                            <Grid
                                Width="90"
                                Height="90"
                                Margin="20,0,0,0">
                                <Ellipse
                                    x:Name="PicVideoEllipse"
                                    Width="90"
                                    Height="90"
                                    Fill="WhiteSmoke"
                                    Stroke="{StaticResource color6}"
                                    StrokeThickness="3" />


                                <Viewbox Height="50" Margin="0,0,0,0">
                                    <Canvas
                                        Width="50"
                                        Height="50"
                                        UseLayoutRounding="False">
                                        <Canvas Canvas.Left="0" Canvas.Top="0">
                                            <Path
                                                Canvas.Left="0"
                                                Canvas.Top="3.05176e-005"
                                                Width="50"
                                                Height="50"
                                                Data="{TemplateBinding PathData}"
                                                Fill="Orange"
                                                Stretch="Fill" />
                                        </Canvas>
                                    </Canvas>
                                </Viewbox>

                            </Grid>

                            <TextBlock
                                x:Name="Title"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Medium"
                                Foreground="Black"
                                Text="{TemplateBinding Content}" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="orange" />
                            <Setter Property="Foreground" Value="orange" />
                            <Setter Property="BorderBrush" Value="{Binding Path=Tag, RelativeSource={RelativeSource Self}}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="myborder" Property="Background" Value="orange" />
                            <Setter TargetName="Title" Property="Foreground" Value="White" />

                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>


</ResourceDictionary>