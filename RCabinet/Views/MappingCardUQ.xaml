                                AutoGenerateColumns="False"
                                Background="#33DB80F0"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                FontSize="14"
                                GridLinesVisibility="All"
                                IsReadOnly="True"
                                ItemsSource="{Binding CardUQCheckingModels}"
                                RenderTransformOrigin="0.5,0.5"
                                RowHeaderWidth="0"
                                SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                SelectionMode="Single"
                                SelectionUnit="FullRow">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectedCellsChanged">
                                        <i:InvokeCommandAction Command="{Binding ItemSelectedCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                                <DataGrid.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform />
                                        <SkewTransform AngleY="-0.645" />
                                        <RotateTransform />
                                        <TranslateTransform Y="-2.488" />
                                    </TransformGroup>
                                </DataGrid.RenderTransform>

                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="120"
                                        Binding="{Binding Mo}"
                                        Header="MO" />
                                    <DataGridTextColumn
                                        Width="120"
                                        Binding="{Binding CardNo}"
                                        Header="Card No" />
                                    <DataGridTextColumn
                                        Width="145"
                                        Binding="{Binding AdjustQuantity}"
                                        Header="Adjust Quantity" />

                                </DataGrid.Columns>
                            </DataGrid>


                            <Button
                                x:Name="btReadingEPC_Copy"
                                Grid.Row="0"
                                Grid.Column="5"
                                Margin="143,10,143,10"
                                Padding="10,10,10,10"
                                Command="{Binding StartReadingEPC}"
                                Content="{Binding ReadingStatus}"
                                FontSize="13"
                                IsEnabled="{Binding EnableReadingEPC}" />

                        </Grid>

                    </TabItem>


                </TabControl>
            </Grid>

        </Border>
    </Border>


</UserControl>
