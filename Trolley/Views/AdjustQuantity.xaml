<UserControl
    x:Class="Trolley.Views.AdjustQuantity"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Trolley.Views"
    xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Trolley.Models"
    xmlns:viewModels="clr-namespace:Trolley.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Orange"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="150"
            Height="40"
            Margin="15,5,5,5"
            Padding="10"
            HorizontalAlignment="Left"
            Command="{Binding GoToManageItems}"
            Content="Cancel" />
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="{Binding Title}"
            FontSize="16"
            FontWeight="Bold" />
        <Label
            Grid.Row="1"
            HorizontalAlignment="Center"
            Content="{Binding ItemName}"
            FontSize="16"
            FontWeight="Bold" />
        <Label
            Grid.Row="2"
            HorizontalAlignment="Center"
            Content="Set the current final quantity for the current item. This action cannot be reversed!"
            FontSize="16"
            FontStyle="Italic"
            Visibility="{Binding IsCreating, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <StackPanel
            Grid.Row="3"
            Margin="0,5,0,5"
            Orientation="Horizontal">
            <Label
                Margin="10,0,10,0"
                VerticalAlignment="Center"
                Content="Quantity"
                FontSize="16"
                FontWeight="Bold" />
            <mahapps:NumericUpDown
                Width="300"
                VerticalContentAlignment="Center"
                FontSize="14"
                IsReadOnly="{Binding IsEditing}"
                TextAlignment="Left"
                Value="{Binding Quantity}" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Margin="0,5,0,0"
            Orientation="Horizontal">
            <Label
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Content="Explanation"
                FontSize="16"
                FontWeight="Bold" />
            <TextBox
                Width="300"
                VerticalContentAlignment="Center"
                FontSize="14"
                TabIndex="1"
                Text="{Binding Explanation, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <CheckBox
            Grid.Row="5"
            Grid.Column="0"
            Margin="5,5,0,5"
            Content="Adjusting Quantity for Stock Purchase"
            FontSize="16"
            IsChecked="{Binding WasAdjustedForStockPurchase}"
            IsEnabled="{Binding CanMarkAdjustedForStockPurchase}" />
        <Button
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="150"
            Height="40"
            Margin="15,5,5,5"
            Padding="10"
            HorizontalAlignment="Center"
            Command="{Binding SaveQuantityUpdates}"
            Content="Save" />
    </Grid>
</UserControl>
