<UserControl
    x:Class="Trolley.Views.ViewCurrencies"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Trolley.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Trolley.Models"
    xmlns:viewModels="clr-namespace:Trolley.ViewModels"
    d:DataContext="{d:DesignInstance Type={x:Type viewModels:ViewCurrenciesViewModel}}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Orange"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="40"
            Margin="15,5,5,5"
            Padding="10"
            HorizontalAlignment="Left"
            Command="{Binding GoToMainMenu}"
            Content="Return to Main Menu" />
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Manage Item Categories"
            FontSize="16"
            FontWeight="Bold" />
        <DataGrid
            Name="ItemsGrid"
            Grid.Row="1"
            Grid.Column="0"
            d:DataContext="{d:DesignInstance Type={x:Type models:Currency}}"
            AutoGenerateColumns="False"
            Background="LightGray"
            BorderBrush="Gray"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            GridLinesVisibility="All"
            IsReadOnly="True"
            ItemsSource="{Binding Currencies}"
            RowHeaderWidth="0"
            SelectedIndex="{Binding SelectedCurrencyIndex}"
            SelectedItem="{Binding SelectedItem}"
            SelectionMode="Single"
            SelectionUnit="FullRow">
            <DataGrid.Style>
                <Style BasedOn="{StaticResource MahApps.Styles.DataGrid}" TargetType="{x:Type DataGrid}">
                    <Setter Property="AlternatingRowBackground" Value="{DynamicResource GrayBrush10}" />
                </Style>
            </DataGrid.Style>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Name}"
                    Header="Name"
                    SortDirection="Ascending" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Abbreviation}"
                    Header="Abbreviation" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Symbol}"
                    Header="Symbol" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding ConversionRateToUSD}"
                    Header="Conversion Rate to 1 USD" />
                <DataGridCheckBoxColumn
                    Width="*"
                    Binding="{Binding IsDefaultCurrency}"
                    Header="Default?" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Orientation="Vertical">
            <Button
                Height="40"
                Margin="5,35,5,0"
                Padding="10"
                Command="{Binding MoveToAddCurrencyScreen}"
                Content="Add Currency"
                FontSize="13" />
            <Button
                Height="40"
                Margin="5,35,5,0"
                Padding="10"
                Command="{Binding MoveToEditCurrencyScreen}"
                Content="Edit Currency"
                FontSize="13"
                IsEnabled="{Binding CanEdit}" />
            <Button
                Height="40"
                Margin="5,35,5,0"
                Padding="10"
                Click="DeleteCurrency_Click"
                Content="Delete Currency"
                FontSize="13"
                IsEnabled="{Binding CanDelete}" />
        </StackPanel>
    </Grid>
</UserControl>
