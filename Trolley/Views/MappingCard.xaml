                                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    SelectionMode="Multiple">
                                    <ListBox.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform AngleY="-0.365" />
                                            <RotateTransform />
                                            <TranslateTransform Y="-1.494" />
                                        </TransformGroup>
                                    </ListBox.RenderTransform>
