    xmlns:models="clr-namespace:Trolley.Models"
    xmlns:viewModels="clr-namespace:Trolley.ViewModels"
    x:Name="MappingCardControl"
    d:DataContext="{d:DesignInstance Type={x:Type viewModels:MappingCardViewModel}}"
    d:DesignHeight="900"
    d:DesignWidth="1400"
